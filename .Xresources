! Fonts

URxvt.font: xft:SourceCodePro:size=10,xft:FreeMono:size=10
URxvt.letterSpace: -1
!URxvt.lineSpace: 1

Xft.antialias:  true
Xft.hinting:    true

!Xft.hintstyle:  hintslight
!Xft.rgba:       rgb

XTerm*faceName: SourceCodePro
XTerm*faceSize: 10


! Misc

rxvt.print-pipe: "cat > /dev/null"
URxvt.print-pipe: "cat > /dev/null"

XTerm*utf8: always
XTerm*utf8Fonts: 1
XTerm*locale: true

XTerm*metaSendsEscape: true

URxvt.urgentOnBell: true
XTerm*bellIsUrgent: true
XTerm*bellOnReset: false

XTerm*highlightSelection: true
XTerm*cutNewline: false
XTerm*on2Clicks: regex [[:alnum:]./]+[.:/@_-][^ ]*[[:alnum:]/#]|[[:alnum:]]+

URxvt.saveLines: 120000
URxvt.scrollBar: false
XTerm*saveLines: 10000
XTerm*fastScroll: true

URxvt.scrollTtyOutput: false
URxvt.scrollTtyKeypress: true
URxvt.scrollWithBuffer: true
XTerm*scrollTtyOutput: false
XTerm*scrollKey: true

URxvt.secondaryScroll: false


! Copy/paste and url selection

URxvt.perl-lib: /home/trygve/.config/urxvt/perl
!URxvt.keysym.Shift-Control-C: perl:clipboard:copy
!URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.M-Insert: perl:clipboard:paste

URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select,vtwheel,font-size
URxvt.selection.pattern-0:  (.*)
URxvt.url-select.button:    3
URxvt.url-select.launcher:  browser
URxvt.url-select.underline: true
URxvt.keysym.Mod4-w:        perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.Mod4-e:        perl:keyboard-select:search
URxvt.keysym.C-Up:          perl:font-size:increase
URxvt.keysym.C-Down:        perl:font-size:decrease
!URxvt.keysym.C-S-Up:        perl:font-size:incglobal
!URxvt.keysym.C-S-Down:      perl:font-size:decglobal

XTerm*VT100.translations:       #override \n\
    <Btn1Up>:                   select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0) \n\
    Shift <Btn2Up>:             insert-selection(CLIPBOARD) \n\
    Shift Ctrl <KeyPress> V:    insert-selection(CLIPBOARD) \n\
    Shift <KeyPress> Home:      scroll-back(11000) \n\
    Shift <KeyPress> End:       scroll-forw(11000)


! Colors
URxvt.background: #000000
URxvt.foreground: #dddddd
XTerm*background: black
XTerm*foreground: grey

URxvt.color0  : black
URxvt.color8  : gray50
URxvt.color1  : red3
URxvt.color9  : red
URxvt.color2  : green3
URxvt.color10 : green
URxvt.color3  : yellow3
URxvt.color11 : yellow
URxvt.color4  : blue2
URxvt.color12 : rgb:5c/5c/ff
URxvt.color5  : magenta3
URxvt.color13 : magenta
URxvt.color6  : cyan3
URxvt.color14 : cyan
URxvt.color7  : gray90
URxvt.color15 : white


